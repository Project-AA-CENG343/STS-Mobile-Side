        android:textAppearance="@style/student_info_white"
        app:layout_constraintBottom_toTopOf="@+id/textView_bildirim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_home" />

    <TextView
        android:id="@+id/textView_bildirim"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="307dp"
        android:drawableLeft="@drawable/baseline_flag_24"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="Bildirimler"
        android:textAppearance="@style/student_info_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>