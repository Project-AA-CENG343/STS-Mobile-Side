        android:text="Fatih YÄ±lmaz"

        android:textAppearance="@style/student_info_white"
        app:layout_constraintBottom_toTopOf="@+id/textView_home"
        app:layout_constraintEnd_toEndOf="@+id/textView_home"
        app:layout_constraintStart_toStartOf="@+id/textView_home"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="27dp"
        android:drawableLeft="@drawable/baseline_arrow_back_24"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Geri"
        android:textAppearance="@style/student_info_white"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:drawableLeft="@drawable/baseline_home_24"
