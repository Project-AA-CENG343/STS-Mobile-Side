        android:gravity="center_vertical"
        android:text="Ana Sayfa"
        android:textAppearance="@style/student_info_white"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
