<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App theme attributes -->
    </style>

    <style name="TransparentActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">#00FFFFFF</item>
        <item name="colorPrimaryDark">#00FFFFFF</item>
        <item name="colorAccent">#00FFFFFF</item>
    </style>

    <style name="student_info_green">
        <item name="android:textSize">15sp</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">#00FF57</item>
    </style>

    <style name="student_info_white">
        <item name="android:textSize">15sp</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>